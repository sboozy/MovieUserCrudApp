<% include ../partials/boilerplate %>

<h1>MovieApp - show all movies</h1>


<div class="movie-container">
<% movies.forEach((movie) => { %>
  <a href="movies/movie/<%= movie.id%>">
    <h3 class="movie-info">Released: <%= movie.release_year%> Directed By: <%=movie.director%></h3>
    <img src="<%= movie.img_url %>" class="movie-poster"></a>
  <% }) %>
</div>



<% include ../partials/end %>
